{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Nexus-Local",
	"version": "0.1.0",
	"identifier": "com.nexus.local",
	"build": {
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "pnpm build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "Nexus Local",
				"width": 1200,
				"height": 800,
				"minWidth": 800,
				"minHeight": 600
			}
		],
		"security": {
			"csp": null
		}
	},
	"build": {
		"beforeBuildCommand": "pnpm build",
		"beforeDevCommand": "pnpm dev",
		"devUrl": "http://localhost:1420",
		"frontendDist": "../dist"
	},
	"bundle": {
		"targets": ["deb", "rpm"]
	}
}
